<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>@ViewBag.Title | Trung tâm ngoại ngữ</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/Content/img/favicon.png" rel="icon">
    <link href="~/Content/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Vendor CSS Files -->
    <link href="~/Content/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/Content/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/sweetalert.min.js"></script>
    <!-- Template Main CSS File -->
    <link href="~/Content/css/style.css" rel="stylesheet">

    <!-- html2pdf library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js" integrity="sha512-GsLlZN/3F2ErC5ifS5QtgpiJtWd43JWSuIgh7mbzZ8zBps+dvLusV+eNQATqgA/HdeKFVgA5v3S/cIrLF7QnIg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <!-- =======================================================
    * Template Name: Ninestars - v4.7.0
    * Template URL: https://bootstrapmade.com/ninestars-free-bootstrap-3-theme-for-creative/
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->
</head>

        <body style="background: #eee;">

            <!-- ======= Header ======= -->
            <header id="header" class="fixed-top d-flex align-items-center">
                <div class="container d-flex align-items-center justify-content-between">

                    <div class="logo">

                        <h1 class="text-light"><a href="#"><img src="~/Content/img/logo.png" alt="logo"><span> Trung tâm ngoại ngữ</span></a></h1>
                        <!-- Uncomment below if you prefer to use an image logo -->
                        <!-- <a href="index.html"><img href="~/Content/img/logo.png" alt="" class="img-fluid"></a>-->
                    </div>

                    <nav id="navbar" class="navbar">
                        <ul>
                            <li><a class="nav-link scrollto @{if (ViewBag.Title.Equals("Đăng ký thi")) {@Html.Encode("active"); }}" href="@Url.Action("Index", "DangKyThi")">Đăng ký thi</a></li>
                            <li class="dropdown">
                                <a href="#" class="@{if (ViewBag.Title.Equals("Tra cứu thông tin thí sinh") || ViewBag.Title.Equals("Tra cứu giấy chứng nhận")) {@Html.Encode("active"); }}"><span>Tra cứu</span> <i class="bi bi-chevron-down"></i></a>
                                <ul>
                                    <li><a class="@{if (ViewBag.Title.Equals("Tra cứu thông tin thí sinh")) {@Html.Encode("active"); }}" href="@Url.Action("Index", "TraCuuThongTinThiSinh")">Tra cứu thông tin thí sinh</a></li>
                                    <li><a class="@{if (ViewBag.Title.Equals("Tra cứu giấy chứng nhận")) {@Html.Encode("active"); }}" href="@Url.Action("Index", "TraCuuGiayChungNhan")">Tra cứu giấy chứng nhận kết quả thi</a></li>
                                </ul>
                            </li>
                            <li><a class="nav-link scrollto @{if (ViewBag.Title.Equals("Danh sách thí sinh")) {@Html.Encode("active"); }}" href="@Url.Action("Index", "DanhSachThiSinh")">Danh sách thí sinh</a></li>
                            <li><a class="nav-link scrollto @{if (ViewBag.Title.Equals("Thống kê")) {@Html.Encode("active"); }}" href="@Url.Action("Index", "ThongKe")">Thống kê</a></li>


                        </ul>
                        <i class="bi bi-list mobile-nav-toggle"></i>
                    </nav><!-- .navbar -->

                </div>
            </header><!-- End Header -->

            <div>
                @RenderBody()
            </div>


            <footer>
                <section>
                </section>
            </footer>

            <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

            <!-- Vendor JS Files -->
            <script href="~/Content/vendor/aos/aos.js"></script>
            <script href="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
            <script href="~/Content/vendor/glightbox/js/glightbox.min.js"></script>
            <script href="~/Content/vendor/isotope-layout/isotope.pkgd.min.js"></script>
            <script href="~/Content/vendor/php-email-form/validate.js"></script>

            <!-- Template Main JS File -->
            <script href="~/Content/js/main.js"></script>

            <script src="~/Content/js/jquery.min.js"></script>

        </body>

        </html>
